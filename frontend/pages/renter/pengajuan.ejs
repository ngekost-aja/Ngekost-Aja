<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ngekost Aja!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <style>
        #change-user-data-btn {
            margin: 1rem 0 0 0;
            background-color: white;
            color: black;
        }

        #change-user-data-btn:hover {
            background-color: gray;
            color: white;
        }

        #text-helper {
            font-size: 10px;
        }

        #right-content {
            margin-left: 1rem;
        }

        .kost-container {
            max-width: 35%;
        }

        .card-img {
            width: 30%;
        }

        .btn-nav-form {
            margin-top: 1rem;
            right: 0;
        }

        #btn-back {
            margin-right: 1rem;
        }

        #btn-continue {
            margin-left: 1rem;
        }

        #form-step-2 {
            display: none;
        }

        #form-step-3 {
            display: none;
        }

        #status-icon {
            height: 1rem;
            width: 1rem;
            border-radius: 1rem;
            background-color: red;
        }

        .payment-method {
            border: 2px solid black;
            height: 2rem;
            margin: .5rem 0;
        }

        .payment-method:hover {
            background-color: gray;
            color: white;
        }

        .logo-bank {
            height: 90%;
            margin: 0 1rem;
        }

        #form-step-4 {
            display: none;
        }
    </style>
</head>

<body>
    <%- include('../../components/NavbarTop.ejs', { user: { login: user.loginStatus } }) %>

        <main class="container fw-100">
            <div class="container position-relative m-4">
                <div class="progress" id="progress-bar-container" role="progressbar" aria-label="Progress"
                    aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="height: 5px;">
                    <div class="progress-bar" id="progress-bar"></div>
                </div>
                <button type="button"
                    class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill progress-bar-node"
                    id="progress-bar-node-1">1</button>
                <button type="button"
                    class="position-absolute top-0 translate-middle btn btn-sm btn-secondary rounded-pill progress-bar-node"
                    id="progress-node-2">2</button>
                <button type="button"
                    class="position-absolute top-0 translate-middle btn btn-sm btn-secondary rounded-pill progress-bar-node"
                    id="progress-node-3">3</button>
                <button type="button"
                    class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill progress-bar-node"
                    id="progress-bar-node-3">4</button>
                <div class="card container form-stage">
                    <section class="form-content" id="form-step-1">
                        <div class="content-step-1 w-50" id="left-content">
                            <form action="" method="post">
                                <fieldset id="user-full-data" disabled>
                                    <legend>Data diri anda</legend>

                                    <label for="username" class="form-label">Nama lengkap</label>
                                    <input type="text" id="username" class="form-control" value="Budi Setiawan"
                                        required>
                                    <label for="user-gender">Jenis Kelamin</label>
                                    <select name="user-gender" id="user-gender" class="form-select" type="text"
                                        required>
                                        <option value="laki-laki">Laki-laki</option>
                                        <option value="perempuan">Perempuan</option>
                                    </select>
                                    <label for="user-mobile-phone">Nomor HP</label>
                                    <input type="number" id="user-mobile-phone" class="form-control" value="08123123123"
                                        required>
                                    <label for="user-email">Email</label>
                                    <input type="email" id="user-email" class="form-control" value="budi@setiawan.com"
                                        required>
                                    <label for="user-job">Pekerjaan</label>
                                    <input type="text" id="user-job" class="form-control" value="Mahasiswa" required>
                                    <label for="user-address">Alamat</label>
                                    <input type="text" id="user-address" class="form-control"
                                        value="Jl. Melati No. 12, Desa Mulyoharjo, Kecamatan Jepara, Kabupaten Jepara"
                                        required>
                                </fieldset>

                                <button type="button" class="btn btn-secondary" id="change-user-data-btn"
                                    onclick="changeUserData()">Ubah data</button>
                                <p id="text-helper" class="fst-italic">*Pastikan data diri anda sesuai sebelum
                                    konfirmasi
                                    pengajuan ngekost</p>
                                <br>

                                <fieldset id="detail-ngekost">
                                    <legend>Rincian Ngekost</legend>
                                    <label for="start-ngekost" class="form-label">Tanggal mulai ngekost</label>
                                    <input type="date" class="form-control" id="start-ngekost"
                                        placeholder="day/month/year" required>
                                    <label for="ngekost-duration">Durasi ngekost</label>
                                    <div id="ngekost-duration-input-area" class="d-flex">
                                        <input type="number" class="form-control w-75" id="ngekost-duration" value="1">
                                        <select type="text" class="form-select w-25" id="duration-type" required>
                                            <option value="month">Bulan</option>
                                            <option value="year">Tahun</option>
                                        </select>
                                    </div>
                                    <label for="total-person" class="form-label">Jumlah penginap</label>
                                    <input type="number" name="total-person" id="total-person" class="form-control"
                                        min="1" placeholder="1" required>
                                    <label for="additional-note">Catatan tambahan (Opsional)</label>
                                    <textarea name="additional-note" id="additional-note"
                                        placeholder="Berikan catatan tambahan untuk pemilik kos. Misalnya: 'Saya membawa rice cooker dengan tegangan tinggi'"
                                        class="form-control" style="height: 100px;"></textarea>
                                </fieldset>
                            </form>
                        </div>
                        <div class="content-step-1" id="right-content">
                            <div class="kost-container card d-flex flex-row position-fixed">
                                <div class="card-img d-flex align-items-center">
                                    <img src="../../assets/img/rumah-kost-tampak-depan-1.jpg" alt="Kost thumbnail"
                                        class="img-fluid">
                                </div>
                                <div class="card-body">
                                    <h4>Kost Graha Indah Jalan Bandung</h4>
                                    <p>Biaya sewa: <span class="fw-bold fs-5">Rp 850.000/bulan</span></p>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="form-content" id="form-step-2">
                        <h3>Aturan Ngekost!</h3>
                        <p>Sebelum melangkah lebih lanjut, perhatikan beberapa peraturan ngekost berikut sesuai dari
                            arahan
                            pemilik kost. Jadilah penghuni yang taat aturan kost agar hidup tenteram!</p>
                        <h5 class="fw-bold">Apa saja yang boleh:</h5>
                        <ul>
                            <li>Boleh membawa kendaraan pribadi (motor dan mobil).</li>
                            <li>Sesama penghuni kost boleh menggunakan fasilitas bersama. Misal: dapur, kamar mandi, dan
                                mushola.</li>
                        </ul>

                        <h5 class="fw-bold">Apa saja yang tidak boleh:</h5>
                        <ul>
                            <li>Tidak boleh membawa barang elektronik tambahan! Jika ketahuan akan dikenakan denda.</li>
                            <li>Tidak boleh membawa hewan peliharaan apapun!</li>
                            <li>Tidak diperkenankan membawa orang lain untuk menginap!</li>
                            <li>Tidak boleh menganggu keamanan dan kenyamanan sesama penghuni kost!</li>
                        </ul>
                    </section>

                    <section class="form-content" id="form-step-3">
                        <h3>Proses pengajuan ke pemilik kos</h3>
                        <p>Status:
                            <span class="fw-bold d-flex" id="process-status">
                                <div id="status-icon"></div>
                                <div id="process-status-text">Belum diproses</div>
                            </span>
                        </p>
                        <p>Klik tombol berikut untuk memroses pengajuan huni kost</p>
                        <button class="btn btn-primary" id="btn-process-data">Proses</button>
                        <br><br>
                        <h5><strong>Perhatian!</strong></h5>
                        <p>Jika dalam 2x24 jam tidak ada respon dari pemilik kost, maka pengajuan akan otomatis
                            dibatalkan
                        </p>
                    </section>

                    <section class="form-content" id="form-step-4">
                        <h3>Pembayaran DP kost</h3>
                        <p>Pilih metode pembayaran</p>
                        <div id="payment-method-container" class="d-flex flex-column w-25">
                            <button class="payment-method btn d-flex justify-content-center align-items-center"
                                id="BCA">
                                <img src="https://www.bca.co.id/-/media/Feature/Card/List-Card/Tentang-BCA/Brand-Assets/Logo-BCA/Logo-BCA_Biru.png"
                                    alt="Logo bank" class="logo-bank">
                                BCA
                            </button>
                            <button class="payment-method btn" id="BRI">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/2/2e/BRI_2020.svg"
                                    alt="Logo bank" class="logo-bank">
                                BRI
                            </button>
                            <button class="payment-method btn" id="Mandiri">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ad/Bank_Mandiri_logo_2016.svg/2560px-Bank_Mandiri_logo_2016.svg.png"
                                    alt="Logo bank" class="logo-bank">
                                Mandiri
                            </button>
                            <button class="payment-method btn" id="BTN">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTQVQeFfShG4wfNkGjsflGaxIk253LyLK78XQ&s"
                                    alt="Logo bank" class="logo-bank">
                                BTN
                            </button>
                            <button class="payment-method btn" id="Bank Jago">
                                <img src="https://companieslogo.com/img/orig/ARTO.JK-75d7e8ca.png?t=1683432205"
                                    alt="Logo bank" class="logo-bank">
                                Bank Jago
                            </button>
                        </div>
                    </section>
                </div>
                <div class="d-flex justify-content-end btn-nav-form">
                    <button type="button" class="btn btn-secondary" id="btn-back">Kembali</button>
                    <button type="button" class="btn btn-success" id="btn-continue">Lanjutkan</button>
                </div>
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
        <script>
            const btnBack = document.getElementById('btn-back')
            const btnContinue = document.getElementById('btn-continue')
            const formStep1 = document.getElementById('form-step-1')
            const formStep2 = document.getElementById('form-step-2')
            const formStep3 = document.getElementById('form-step-3')
            const formStep4 = document.getElementById('form-step-4')
            const progressBar = document.getElementById('progress-bar')
            const progressBarContainer = document.getElementById('progress-bar-container')
            const userFullData = document.getElementById('user-full-data')
            const btnProcessData = document.getElementById('btn-process-data')
            const processStatus = document.getElementById('process-status')
            const processStatusText = document.getElementById('process-status-text')
            const statusIcon = document.getElementById('status-icon')



            let currentStage = 1

            btnContinue.addEventListener('click', () => {
                console.log(currentStage)
                if (currentStage == 1) {
                    formStep1.style.display = 'none'
                    formStep2.style.display = 'block'
                } else if (currentStage == 2) {
                    formStep2.style.display = 'none'
                    formStep3.style.display = 'block'
                } else if (currentStage == 3) {
                    formStep3.style.display = 'none'
                    formStep4.style.display = 'block'
                }
                progressBar.style.width = adjustWidth('up')
                currentStage++
            });

            btnBack.addEventListener('click', () => {
                if (currentStage == 2) {
                    formStep2.style.display = 'none';
                    formStep1.style.display = 'flex';
                } else if (currentStage == 3) {
                    formStep3.style.display = 'none'
                    formStep2.style.display = 'block'
                } else if (currentStage == 4) {
                    formStep4.style.display = 'none'
                    formStep3.style.display = 'block'
                }
                progressBar.style.width = adjustWidth('down');
                currentStage--
            });

            function adjustWidth(instruction) {
                if (instruction == 'up') {
                    if (currentStage == 1) {
                        return '33%';
                    } else if (currentStage == 2) {
                        return '66%'
                    } else if (currentStage == 3) {
                        return '100%';
                    }
                } else {
                    if (currentStage == 4) {
                        return '66%';
                    } else if (currentStage == 3) {
                        return '33%'
                    } else if (currentStage == 2) {
                        return '0%'
                    }
                }
            }

            function changeUserData() {
                userFullData.disabled = userFullData.disabled == true ? false : true
            }

            btnProcessData.addEventListener('click', () => {
                processStatusText.textContent = 'Sedang diproses'
                statusIcon.style.backgroundColor = 'orange'
            })
        </script>
</body>

</html>